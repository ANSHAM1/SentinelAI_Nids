{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sentinelai",
  "version": "0.1.0",
  "identifier": "com.ansham.sentinelai",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "sentinelai",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ],
    "resources": ["resources/embedded-python/**/*"]
  }
}
